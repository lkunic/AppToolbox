<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="5dip" />
			<gradient
				android:startColor="#06000000"
				android:endColor="#20000000"
				android:angle="270"
				/>
		</shape>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners
					android:radius="5dip" />
				<gradient
					android:startColor="@color/app_theme_accent"
					android:endColor="@color/app_theme_accent_dark"
					android:angle="270"/>
			</shape>
		</clip>
	</item>

</layer-list>