<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/pager_tab_control_pressed"/>
		</shape>
	</item>

	<item android:state_selected="true">
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/pager_tab_control_accent"/>
				</shape>
			</item>
			<item android:bottom="8dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/pager_tab_control_1"/>
				</shape>
			</item>
		</layer-list>
	</item>

	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/pager_tab_control_1"/>
		</shape>
	</item>

</selector>